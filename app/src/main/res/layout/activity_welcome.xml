<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Welcome">

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="@color/black"
            app:radius="6dp"
            app:slideInterval="2000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carousel"
            android:background="@drawable/border"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Animal jokes"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_animal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="35dp"
                android:text="Read" />
        </LinearLayout>


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linear"
            android:layout_marginTop="0dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="@color/black"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carousel2"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Food jokes"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_food"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="55dp"
                android:text="Read" />
        </LinearLayout>


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="0dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="@color/black"
            app:radius="6dp"
            app:slideInterval="4000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carousel3"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Office jokes"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_office"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="45dp"
                android:text="Read" />
        </LinearLayout>


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel4"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linear2"
            android:layout_marginTop="0dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="@color/black"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carousel4"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Medical jokes"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_medical"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:text="Read" />
        </LinearLayout>


        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carousel5"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/linear3"
            android:layout_marginTop="0dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="@color/black"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />


        <LinearLayout
            android:id="@+id/linear4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/carousel5"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="Stand up jokes"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button_stand_up"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Read" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>